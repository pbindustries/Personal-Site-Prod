extends ../layout

block content
  //- FIRST CONTAINER
  .carousel.slide#myCarousel(data-ride="carousel")
    //- Indicators
    ol.carousel-indicators
      li.active(data-target="#myCarousel", data-slide-to="0")
      li(data-target="#myCarousel", data-slide-to="1")
      li(data-target="#myCarousel", data-slide-to="2")
      li(data-target="#myCarousel", data-slide-to="3")
      li(data-target="#myCarousel", data-slide-to="4")
      li(data-target="#myCarousel", data-slide-to="5")
      li(data-target="#myCarousel", data-slide-to="6")
      li(data-target="#myCarousel", data-slide-to="7")

    //- Wrapper for slides
    .carousel-inner
      .item.active
        img.center(src="/images/buddy/buddy.jpg", alt="Pic1", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy2.jpg", alt="Pic2", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy3.jpg", alt="Pic3", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy4.jpg", alt="Pic4", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy5.jpg", alt="Pic5", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy6.jpg", alt="Pic6", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy7.jpg", alt="Pic7", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy8.jpg", alt="Pic8", height="2000", width="2000")

    //- Left and right controls
    a.left.carousel-control(href="#myCarousel", data-slide="prev")
      span.glyphicon.glyphicon-chevron-left
      span.sr-only Previous
    a.right.carousel-control(href="#myCarousel", data-slide="next")
      span.glyphicon.glyphicon-chevron-right
      span.sr-only Next
  .main-text.hidden-xs
    .col-md-12.text-center
      .jumbotron(style="background:transparent !important")
        h1 Create An Account


  .container-fluid.text-center.bg-7.bot
    .container-page
      // FORM DIV 
      .col-md-8.col-sm-offset-2.bg-4.page-header
        br
        h1 Create An Account
        br
        br
        form.form-horizontal(id='signup-form', method='POST')
          
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group.col-lg-12
            label.control-label.col-sm-2 Name
            .col-sm-10
              input.form-control(type='name', name='name', id='name', placeholder='Name', autofocus, required)
          .form-group.col-lg-12
            label.control-label.col-sm-2  Email Address
            .col-sm-10
              input.form-control(type='', name='', id='', placeholder='Email', autofocus, required)

          .form-group.col-lg-12
            label.control-label.col-sm-2  Confirm Email Address
            .col-sm-10
              input.form-control(type='', name='', id='', placeholder='Confirm Email', autofocus,required)
          .form-group.col-lg-12
            label.control-label.col-sm-2 Password
            .col-sm-10
              input.form-control(type='', name='', id='', placeholder='Password', autofocus, required)
               
          .form-group.col-lg-12
            label.control-label.col-sm-2(for='confirmPassword') Confirm Password
            .col-sm-10
              input.form-control(type='', name='', id='', placeholder='Confirm Password', autofocus, required)

          .form-group
            .col-sm-offset-2.col-sm-10
              .checkbox
                label 
                  input.checkbox(type="checkbox") 
                  | Sign up for our newsletter
          .form-group
            .col-sm-offset-2.col-sm-10
              .checkbox
                label 
                  input.checkbox(type="checkbox")
                  | Send notifications to this email 
          br
          button.btn.btn-success(type="submit") 
            i.fa.fa-user-plus Signup

