.navbar-wrapper
  .container-fluid
    .navbar.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
          a.navbar-brand.fa.fa-cube#headerText(href='/') Philip Bankier
        .collapse.navbar-collapse#navbar
          ul.nav.navbar-nav
            li(class=(title === 'Home') ? 'active' : undefined)
              a#headerText(href='/') Home
            li(class=(title === 'About') ? 'active' : undefined)
              a#headerText(href='/about') About Me
            li(class=(title === 'Contact') ? 'active' : undefined)
              a#headerText(href='/contact') Contact Me
            li.dropdown
              a.dropdown-toggle#headerText(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") My Projects
                span(class='caret')
                  ul.dropdown-menu
                    li
                      a#headerText(href='/summary') Project Summary Page
                    li(class=(title === 'Rules') ? 'active' : undefined)
                      a#headerText(href='/rules') Game Rules
            li.dropdown
              a.dropdown-toggle#headerText(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") My Things
                span(class='caret')
                  ul.dropdown-menu
                    li(class=(title === 'About') ? 'active' : undefined)
                      a#headerText(href='/about') About Me
                    li(class=(title === 'Resume') ? 'active' : undefined)
                      a#headerText(href='/resume') My Resume
            li.dropdown
              a.dropdown-toggle#headerText(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Other Stuff
                span(class='caret')
                  ul.dropdown-menu
                    li
                      a#headerText(href='/buddy') Buddy
                    li
                      a#headerText(href='/boo') Boo
                    li
                      a#headerText(href='/articles') Articles
                    li(class=(title === 'Problematic') ? 'active' : undefined)
                      a#headerText(href='/problematic') Problematic
                    li(class=(title === 'Resources') ? 'active' : undefined)
                      a#headerText(href='/resources') Resources
            li
              a#headerText(href='/status') Status

          ul.nav.navbar-nav.navbar-right
            if !user
              li(class=(title === 'Login') ? 'active' : undefined)
                a#headerText(href='/login') Login
              li(class=(title === 'Create Account') ? 'active' : undefined)
                a#headerText(href='/signup') Create Account
            else
              li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  if user.profile.picture
                    img(src=user.profile.picture)
                  else
                    img(src=user.gravatar(60))
                  span= user.profile.name || user.email || user.id
                  i.caret
                ul.dropdown-menu
                  li
                    a(href='/account') My Account
                  li.divider
                  li
                    a(href='/logout') Logout
