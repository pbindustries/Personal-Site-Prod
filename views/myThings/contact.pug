extends ../layout

block content
  //- FIRST CONTAINER
  .carousel.slide#myCarousel(data-ride="carousel")
    //- Indicators
    ol.carousel-indicators
      li.active(data-target="#myCarousel", data-slide-to="0")
      li(data-target="#myCarousel", data-slide-to="1")
      li(data-target="#myCarousel", data-slide-to="2")
      li(data-target="#myCarousel", data-slide-to="3")
      li(data-target="#myCarousel", data-slide-to="4")
      li(data-target="#myCarousel", data-slide-to="5")
      li(data-target="#myCarousel", data-slide-to="6")
      li(data-target="#myCarousel", data-slide-to="7")

    //- Wrapper for slides
    .carousel-inner
      .item.active
        img.center(src="/images/buddy/buddy.jpg", alt="Pic1", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy2.jpg", alt="Pic2", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy3.jpg", alt="Pic3", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy4.jpg", alt="Pic4", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy5.jpg", alt="Pic5", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy6.jpg", alt="Pic6", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy7.jpg", alt="Pic7", height="2000", width="2000")
      .item
        img.center(src="/images/buddy/buddy8.jpg", alt="Pic8", height="2000", width="2000")

    //- Left and right controls
    a.left.carousel-control(href="#myCarousel", data-slide="prev")
      span.glyphicon.glyphicon-chevron-left
      span.sr-only Previous
    a.right.carousel-control(href="#myCarousel", data-slide="next")
      span.glyphicon.glyphicon-chevron-right
      span.sr-only Next
  .main-text.hidden-xs
    .col-md-12.text-center
      .jumbotron(style="background:transparent !important")
        h1 Contact Me

  .container-fluid.bg-7.bot
    //- FORM DIV 
    .col-sm-8.col-sm-offset-2.text-center.container.bg-4.page-header
      form.form-horizontal(method='POST')
        h1 Send Me An Email
        br
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          label(class='col-sm-2 control-label', for='name') Name
          .col-sm-8
            input.form-control(type='text', name='name', id='name', autofocus=true)
        .form-group
          label(class='col-sm-2 control-label', for='email') Email
          .col-sm-8
            input.form-control(type='text', name='email', id='email')
        .form-group
          label(class='col-sm-2 control-label', for='message') Body
          .col-sm-8
            textarea.form-control(name='message', id='message', rows='7')
        .form-group
          .col-sm-offset-2.col-sm-8
            button.btn.btn-primary(type='submit')
              i.fa.fa-envelope Send
        h4  Or contact me on:
          br
          br
          ul.list-inline.banner-social-buttons
            li
              a.btn.btn-default.btn-lg(href="#")
                i.fa.fa-facebook
                  span.network-name Facebook
            li
              a.btn.btn-default.btn-lg(href="#")
                i.fa.fa-linkedin
                  span.network-name LinkedIn
        br
        br
        br
